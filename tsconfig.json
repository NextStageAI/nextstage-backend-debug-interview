{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "inlineSourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "lib": ["esnext"],
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts"]
}
